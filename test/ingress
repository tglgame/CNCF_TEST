apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: kubia 
spec:
  ingressClassName: nginx
  tls:
  - hosts:
    - kubia.example.com
    secretName: kubia-secret
  rules:
  - host: kubia.example.com 
    http:
      paths:
      - path: /
        pathType: ImplementationSpecific
        backend:
          service: 
            name: kubia-nodeport 
            port: 
              number: 80

